<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout  Margin="0,0,0,0" BackgroundColor="White">
            <Image Source="hasaki.vn" WidthRequest="400" Margin="20"></Image>

            <Entry x:Name="Email" Keyboard="Text" Placeholder="Email" WidthRequest="400"></Entry>

            <Entry x:Name="Password" Keyboard="Text" IsPassword="True" Placeholder="Mật khẩu mới" WidthRequest="400"></Entry>

            <Entry x:Name="RePassword" Keyboard="Text" IsPassword="True" Placeholder="Xác nhận lại mật khẩu mới" WidthRequest="400"></Entry>

            <Button x:Name="ChangePassbtn" Text="THAY ĐỔI MẬT KHẨU" 
                    WidthRequest="400" TextColor="White" BackgroundColor="DarkGreen" 
                    VerticalOptions="Center" HorizontalOptions="Center" Clicked="ChangePassbtn_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>